<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
 >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to the SATApp"
     />
    <Button
        android:id="@+id/learn_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Learn Vocab"
        android:onClick="showLearnVocab"
    />
    <Button
        android:id="@+id/prac_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Practice Vocab"
        android:onClick="showPracticeVocab"
    />
    <Button
        android:id="@+id/test_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Vocab"
        android:onClick="showPracticeVocab"
    />
    <ImageView
        android:id="@+id/profImg_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription=""/>
</LinearLayout>

